/**index.wxss**/
.index-box {
  width: 100vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;

}
.weather-box {
  width: 70px;
  height: 70px;
  text-align: center;
  border: 1px solid #e8eaec;
  box-shadow: 0 1px 6px #eeeeee;
  border-radius: 3px;
  margin-top: 10px;
  flex-shrink: 1;
}
.weather-box:active {
  background-color: #eeeeee;
}
.weather {
  display: block;
  width: 48px;
  height: 48px; 
  margin: 0 auto;
}